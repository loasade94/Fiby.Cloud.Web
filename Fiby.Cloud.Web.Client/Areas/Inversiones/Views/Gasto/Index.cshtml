@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
@*<link href="~/css/mdb.min.css" rel="stylesheet">*@

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Registro de Gastos</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Complete la Información</h5>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboSemana">
                                                        @foreach (var item in ViewBag.ListaSemana)
                                                        {
                                                            if (item.Prioridad == 1)
                                                            {
                                                                <option selected value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                        }
                                                    </select>
                                                    <label for="cboSemana" class="fiby-label active">Semana</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="fiby-md-form">
                                                    <input type="text" class="fiby-input-text form-control" id="txtDescripcion" placeholder=" ">
                                                    <label for="txtDescripcion" class="fiby-label active">Descripción</label>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-2">
                                                <div class="fiby-md-form">
                                                    <button type="button" id="btnBuscar" class="btn btn-info btn">Buscar</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="fiby-md-form">
                                                    <input type="text" class="fiby-input-text form-control" id="txtMonto" placeholder="0.00">
                                                    <label for="txtMonto" class="fiby-label active">Monto</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="fiby-md-form">
                                                    <input type="text" class="fiby-input-text form-control" id="txtAdicional" placeholder=" ">
                                                    <label for="txtAdicional" class="fiby-label active">Adicional</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="card-body text-center">
                                                <div class="ctn-button">
                                                    <button type="button" id="btnRegistrar" class="btn btn-info btn">Registrar Gasto</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table id="tbGasto" class="table table-striped table-bordered">
                                                        <thead id="thGasto">
                                                            <tr>
                                                                <th class="text-center">Acciones</th>
                                                                <th class="text-center">Descripción</th>
                                                                <th class="text-center">Monto</th>
                                                                <th class="text-center">Categoria</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/app/areas/inversiones/views/gasto/js/index.js")" asp-append-version="true"></script>