@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
@*<link href="~/css/mdb.min.css" rel="stylesheet">*@

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Registro de Clientes</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div>
                                            <h5 class="card-title">Complete la Información</h5>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="fiby-md-form">
                                                        <input type="text" class="fiby-input-text form-control" id="txtNombres" placeholder=" ">
                                                        <label for="txtNombres" class="fiby-label active">Alias</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="fiby-md-form">
                                                        <input type="text" class="fiby-input-text form-control" id="txtTelefono" placeholder=" ">
                                                        <label for="txtTelefono" class="fiby-label active">Telefono</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <div class="fiby-md-form">
                                                        <input type="text" class="fiby-input-text form-control" id="txtDireccion" placeholder=" ">
                                                        <label for="txtDireccion" class="fiby-label active">Dirección</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div>
                                                <h5 class="card-title">Facturación</h5>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="fiby-md-form">
                                                            <select class="fiby-input-text" onchange="clientejs.ocultarTipoDocumento();" id="cboTipoCliente">
                                                                <option value="">.:Seleccionar:.</option>
                                                                @foreach (var item in ViewBag.ListaTipoCliente)
                                                                {
                                                                    <option value="@item.CodigoRegistro">@item.DescripcionRegistro</option>
                                                                }
                                                            </select>
                                                            <label for="cboTipoCliente" class="fiby-label active">Tipo Cliente</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="fiby-md-form">
                                                            <input type="text" onblur="clientejs.buscarRUC();" class="fiby-input-text form-control" id="txtNumeroDocumento" placeholder=" ">
                                                            <label for="txtNumeroDocumento" class="fiby-label active">Numero Documento</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6" id="dvNombreCompleto">
                                                        <div class="fiby-md-form">
                                                            <input type="text" class="fiby-input-text form-control" id="txtNombreCompleto" placeholder=" ">
                                                            <label for="txtNombreCompleto" class="fiby-label active">Nombres Completos</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6" id="dvRazonSocial">
                                                        <div class="fiby-md-form">
                                                            <input type="text" class="fiby-input-text form-control" id="txtRazonSocial" placeholder=" ">
                                                            <label for="txtRazonSocial" class="fiby-label active">Razón Social</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="fiby-md-form">
                                                            <select class="fiby-input-text" onchange="clientejs.buscarProvinciaPorDept();" id="cboDepartamento">
                                                                <option value="">.:Seleccionar:.</option>
                                                                @foreach (var item in ViewBag.ListaDepartamento)
                                                                {
                                                                    <option value="@item.CodigoDepartamento">@item.DepartamentoDescripcion</option>
                                                                }
                                                            </select>
                                                            <label for="cboDepartamento" class="fiby-label active">Departamento</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="fiby-md-form">
                                                            <select class="fiby-input-text" onchange="clientejs.buscarDistritoPorDeptProv();" id="cboProvincia">
                                                                @*<option value="0">.:Seleccionar:.</option>
                            @foreach (var item in ViewBag.ListaTipoCliente)
                            {
                                <option value="@item.CodigoRegistro">@item.DescripcionRegistro</option>
                            }*@
                                                            </select>
                                                            <label for="cboProvincia" class="fiby-label active">Provincia</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="fiby-md-form">
                                                            <select onchange="clientejs.setearUbigeo(this);" class="fiby-input-text" id="cboDistrito">
                                                                @*@foreach (var item in ViewBag.ListaTipoCliente)
                            {
                                <option value="@item.CodigoRegistro">@item.DescripcionRegistro</option>
                            }*@
                                                            </select>
                                                            <label for="cboDistrito" class="fiby-label active">Distrito</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-9">
                                                        <div class="fiby-md-form">
                                                            <input type="text" class="fiby-input-text form-control" id="txtDireccionFacturacion" placeholder=" ">
                                                            <label for="txtDireccionFacturacion" class="fiby-label active">Dirección Facturación</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="fiby-md-form">
                                                            <input type="text" readonly class="fiby-input-text form-control" id="txtUbigeo" placeholder=" ">
                                                            <label for="txtUbigeo" class="fiby-label active">Ubigeo</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="card-body text-center">
                                                    <div class="ctn-button">
                                                        <button type="button" id="btnRegistrar" class="btn btn-info btn">Registrar Cliente</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="table-responsive">
                                                        <table id="tbCliente" class="table table-striped table-bordered">
                                                            <thead id="thCliente">
                                                                <tr>
                                                                    <th class="text-center">Acciones</th>
                                                                    <th class="text-center">Codigo</th>
                                                                    <th class="text-center">Nombres</th>
                                                                    <th class="text-center">Dirección</th>
                                                                    <th class="text-center">Telefono</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbCliente">
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/app/areas/maintenance/views/cliente/js/index.js")" asp-append-version="true"></script>