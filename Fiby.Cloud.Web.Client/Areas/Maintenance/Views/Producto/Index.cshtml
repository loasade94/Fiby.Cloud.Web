                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Resultados</h5>
                    <div class="row">
                        @*<div class="col-md-12">
                            @Html.Partial("Grid")
                        </div>*@
