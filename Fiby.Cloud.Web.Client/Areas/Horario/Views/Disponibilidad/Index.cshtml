@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<link href="~/app/areas/horario/views/disponibilidad/css/jquery-ui.css" rel="stylesheet">
<link href="~/app/areas/horario/views/disponibilidad/css/jquery-ui-autocomplete-with-clear-button.css" rel="stylesheet">
<link href="~/app/areas/horario/views/disponibilidad/css/index.css" rel="stylesheet">

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Disponibilidad de Empleados</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Filtros</h5>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboSemana">
                                                        @foreach (var item in ViewBag.ListaSemana)
                                                        {
                                                            if (item.Prioridad == 1)
                                                            {
                                                                <option selected value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                        }
                                                    </select>
                                                    <label for="cboSemana" class="fiby-label active">Semana</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table id="tbDisponibilidadSemana" class="table table-bordered">
                                                        <thead id="thDisponibilidadSemana">
                                                            <tr>
                                                                @foreach (var item in ViewBag.ListaDiasXSemana)
                                                                {
                                                                    <th style="cursor:pointer;" onclick="disponibilidadjs.agregar_servicio('@item.Fecha.ToString("dd/MM/yyyy")');" class="text-center"><b>@item.Dia</b></th>
                                                                }
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbDisponibilidadSemana">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript" src="@Url.Content("~/app/areas/horario/views/disponibilidad/js/jquery-ui.js")" asp-append-version="true"></script>
<script type="text/javascript" src="@Url.Content("~/app/areas/horario/views/disponibilidad/js/jquery-ui-autocomplete-with-clear-button.js")" asp-append-version="true"></script>
<script type="text/javascript" src="@Url.Content("~/app/areas/horario/views/disponibilidad/js/index.js")" asp-append-version="true"></script>