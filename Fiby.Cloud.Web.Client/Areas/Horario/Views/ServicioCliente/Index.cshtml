@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<link href="~/app/areas/horario/views/calendario/css/index.css" rel="stylesheet">
<link href="~/app/areas/horario/views/calendario/css/jquery-ui.css" rel="stylesheet">
<link href="~/app/areas/horario/views/calendario/css/jquery-ui-autocomplete-with-clear-button.css" rel="stylesheet">

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Busqueda de Servicios</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="fiby-md-form">
                                                        <select class="fiby-input-text" id="combobox">
                                                            <option selected id="originalValue" value="0"></option>
                                                            @foreach (var item in ViewBag.ListaCliente)
                                                            {
                                                                <option value="@item.IdCliente">@item.Nombres</option>
                                                            }
                                                        </select>
                                                        <label for="combobox" class="fiby-label active">Cliente</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="fiby-md-form">
                                                        <select class="fiby-input-text" id="cboSemana">
                                                            <option value="0" selected>--TODOS--</option>
                                                            @foreach (var item in ViewBag.ListaSemana)
                                                            {
                                                                <option value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                        </select>
                                                        <label for="cboSemana" class="fiby-label active">Semana</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div style="justify-content:center;padding-bottom:20px !important;" 
                                                     class="align-self-center d-flex modal-buttons-div">
                                                    <button type="button" class="btn btn-info btn modal-btn-save" id="btnBuscar" >
                                                        BUSCAR
                                                    </button>
                                                    <button type="button" id="btnLimpiar" class="btn btn-info btn">
                                                        LIMPIAR
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="table-responsive">
                                                        <table id="tbServiciosPorCliente" class="table table-striped table-bordered">
                                                            <thead id="thServiciosPorCliente">
                                                                <tr>
                                                                    <th class="text-center">Fecha</th>
                                                                    <th class="text-center">Horario</th>
                                                                    <th class="text-center">Pasaje</th>
                                                                    <th class="text-center">Monto Pagado</th>
                                                                    <th class="text-center">Empleado</th>
                                                                    <th class="text-center">Dirección</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tbServiciosPorCliente">
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/app/areas/horario/views/calendario/js/jquery-ui.js")" asp-append-version="true"></script>
<script type="text/javascript" src="@Url.Content("~/app/areas/horario/views/serviciocliente/js/jquery-ui-autocomplete-with-clear-button.js")" asp-append-version="true"></script>
<script type="text/javascript" src="@Url.Content("~/app/areas/horario/views/serviciocliente/js/index.js")" asp-append-version="true"></script>