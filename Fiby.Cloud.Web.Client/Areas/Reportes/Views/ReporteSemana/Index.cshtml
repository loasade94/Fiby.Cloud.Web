@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
@*<link href="~/css/mdb.min.css" rel="stylesheet">*@
<link href="~/app/areas/horario/views/disponibilidad/css/index.css" rel="stylesheet">

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Reporte de beneficios a la empresa</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Filtros</h5>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboSemana">
                                                        @foreach (var item in ViewBag.ListaSemana)
                                                        {
                                                            if (item.Prioridad == 1)
                                                            {
                                                                <option selected value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                        }
                                                    </select>
                                                    <label for="cboSemana" class="fiby-label active">Semana</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="card-body text-center">
                                                <div class="ctn-button">
                                                    <button type="button" id="btnBuscar" class="btn btn-info btn">Generar Reporte</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table id="tblReporteSemana" class="table table-striped table-bordered">
                                                        <thead id="thReporteSemana">
                                                            <tr>
                                                                <th class="text-center">Dia</th>
                                                                <th class="text-center">Cliente</th>
                                                                <th class="text-center">Horas</th>
                                                                <th class="text-center">Pago Cliente</th>
                                                                <th class="text-center">SubTotal</th>
                                                                <th class="text-center">Pasaje</th>
                                                                <th class="text-center">Pago Empleado</th>
                                                                <th class="text-center">Rentabilidad</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbReporteSemana">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/app/areas/reportes/views/reportesemana/js/index.js")" asp-append-version="true"></script>