@{
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
@*<link href="~/css/mdb.min.css" rel="stylesheet">*@

<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Registro de Pagos del Cliente</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Complete la Información</h5>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboEmpleado">
                                                        @foreach (var item in ViewBag.ListaEmpleados)
                                                        {
                                                            <option value="@item.Codigo">@item.Descripcion</option>
                                                        }
                                                    </select>
                                                    <label for="cboEmpleado" class="fiby-label active">Empleado</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboSemana">
                                                        @foreach (var item in ViewBag.ListaSemana)
                                                        {
                                                            if (item.Prioridad == 1)
                                                            {
                                                                <option selected value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                        }
                                                    </select>
                                                    <label for="cboSemana" class="fiby-label active">Semana</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="card-body text-center">
                                                <div class="ctn-button">
                                                    <button type="button" id="btnBuscar" class="btn btn-info btn">Buscar Servicios</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table id="tbPagosXCliente" class="table table-striped table-bordered">
                                                        <thead id="thPagosXCliente">
                                                            <tr>
                                                                <th class="text-center">Acciones</th>
                                                                <th class="text-center">Fecha</th>
                                                                <th class="text-center">Cliente</th>
                                                                <th class="text-center">Monto Pagado</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbPagosXCliente">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/app/areas/pagos/views/pagocliente/js/index.js")" asp-append-version="true"></script>