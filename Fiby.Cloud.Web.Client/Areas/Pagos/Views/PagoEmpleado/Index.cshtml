@{
    Layout = ViewBag.Layout;
}
@*<link href="~/css/mdb.min.css" rel="stylesheet">*@
<input type="hidden" name="hddIdPerfil" id="hddIdPerfil" value="@ViewBag.IdPerfil"/>
<div class="card">
    <div class="card-body wizard-content">
        <h4 class="card-title">Registro de Pagos por Empleado</h4>
        <h6 class="card-subtitle"></h6>
        <form id="example-form" action="#" class="mt-5" novalidate="novalidate">
            <div role="application" class="wizard clearfix" id="steps-uid-0">
                <div class="content clearfix">
                    <div id="steps-uid-0-p-0" role="tabpanel" class="body" aria-labelledby="steps-uid-0-h-0" aria-hidden="false">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Complete la Información</h5>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboEmpleado">
                                                        @foreach (var item in ViewBag.ListaEmpleados)
                                                        {
                                                            <option value="@item.Codigo">@item.Descripcion</option>
                                                        }
                                                    </select>
                                                    <label for="cboEmpleado" class="fiby-label active">Empleado</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="fiby-md-form">
                                                    <select class="fiby-input-text" id="cboSemana">
                                                        @foreach (var item in ViewBag.ListaSemana)
                                                        {
                                                            if (item.Prioridad == 1)
                                                            {
                                                                <option selected value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@item.IdSemana">@item.NombreSemana</option>
                                                            }
                                                        }
                                                    </select>
                                                    <label for="cboSemana" class="fiby-label active">Semana</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="card-body text-center">
                                                <div class="ctn-button">
                                                    <button type="button" id="btnBuscar" class="btn btn-info btn">Buscar Detalle de Pagos</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table id="tbPagosXEmpleado" class="table table-striped table-bordered">
                                                        <thead id="thPagosXEmpleado">
                                                            <tr>
                                                                <th class="text-center">Horas Pagadas</th>
                                                                <th class="text-center">Monto Pagado</th>
                                                                <th class="text-center">Fecha de Pago</th>
                                                                <th class="text-center">Estado</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbPagosXEmpleado">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="table-responsive">
                                                    <table id="tbPagosXEmpleadoDetalle" class="table table-striped table-bordered">
                                                        <thead id="thPagosXEmpleadoDetalle">
                                                            <tr>
                                                                @if (ViewBag.IdPerfil == "1")
                                                                {
                                                                    <th class="text-center">Acciones</th>
                                                                }

                                                                <th class="text-center">Dia</th>
                                                                <th class="text-center">Cliente</th>
                                                                <th class="text-center">Hora Inicio</th>
                                                                <th class="text-center">Hora Fin</th>
                                                                <th class="text-center">Horas</th>
                                                                <th class="text-center">SubTotal</th>
                                                                <th class="text-center">Pasaje</th>
                                                                <th class="text-center">Monto Final</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbPagosXEmpleadoDetalle">
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="card-body text-center">
                                                <div class="ctn-button">
                                                    <button type="button" id="btnPagar" class="btn btn-info btn is-hidden">Registrar Pago</button>
                                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    <button type="button" id="btnGenerarPDF" class="btn btn-info btn is-hidden">Generar Boleta de Pago</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/app/areas/pagos/views/pagoempleado/js/index.js")" asp-append-version="true"></script>