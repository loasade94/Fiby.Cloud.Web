
@model List<Fiby.Cloud.Web.DTO.Modules.Mantenimiento.Response.TrabajadorDTOResponse>

@{
    Layout = "";
}
<div class="table-responsive">
    <table id="tablaTrabajador" class="display table table-striped table-hover">
        <thead id="thTrabajador">
            <tr>
                <th class="text-center">Nombre Completo</th>
                <th class="text-center">Puesto</th>
                <th class="text-center">Especialidad</th>
                <th class="text-center">Tipo Trabajador</th>
                <th class="text-center">Documento</th>
                <th class="text-center">Telefono</th>
                <th class="text-center">Sexo</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody id="tbTrabajador">
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model.ToList()[i];

                <tr>
                    <td class="text-center">@item.NombreCompleto</td>
                    <td class="text-center">@item.PuestoDescripcion</td>
                    <td class="text-center">@item.EspecialidadMedicaDescripcion</td>
                    <td class="text-center">@item.DescripcionTipoTrabajador</td>
                    <td class="text-center">@item.NumeroDocumento</td>
                    <td class="text-center">@item.Telefono</td>
                    <td class="text-center">@item.SexoDescripcion</td>
                    <td class="text-center">@item.SituacionRegistro</td>
                    <td class="text-center">
                        <div class="form-button-action">
                            <button class="btn btn-link btn-danger btn-lg" onclick="trabajadorjs.eliminarTrabajador(@item.CodigoTrabajador)" title="Eliminar">
                                <i class="fa fa-trash"></i>
                            </button>
                            <button class="btn btn-link btn-primary btn-lg" onclick="trabajadorjs.openModal(@item.CodigoTrabajador)" title="Editar">
                                <i class="fa fa-edit"></i>
                            </button>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>