@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie-edge">
    <title>Fiby-Citas Medicas</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/login/css/style.css">
    @*<link rel="stylesheet" type="text/css " href="assets/css/css/all.min.css">*@
    <link rel="stylesheet" type="text/css" href="~/css/login/css/sweetalert.css">
    <link rel="icon" href="~/css/login/img/logo.png" type="image/x-icon" />
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
</head>
<body>
    <!--  <img class="wave"src="../assets/img/wave.png" alt="">  -->
    <div class="contenedor">
        <div class="img">
            <img src="~/css/login/img/bg.svg" alt="">
        </div>
        <div class="contenido-login">

            <form action="#" autocomplete="off">

                <img src="~/css/login/img/logo.png" alt="">
                <h2>Ingreso</h2>
                <div class="input-div nit">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">

                        <input type="email" id="txtUserName" required placeholder="CORREO O USUARIOS">
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">

                        <input type="password" placeholder="CONTRASEÑA" id="txtPassword" required>
                    </div>
                </div>
                <div class="row" id="load" hidden="hidden">
                    <div class="col-xs-4 col-xs-offset-4 col-md-2 col-md-offset-5">
                        <img src="~/css/login/img/load.gif" width="100%" alt="">
                    </div>
                    <div class="col-xs-12 center text-accent">
                        <span>Validando información...</span>
                    </div>
                </div>

                <input type="button" class="btn" name="button" id="btnIngresarSistema" value="Iniciar sesion">

            </form>

        </div>
    </div>
    <input type="hidden" value="@ViewBag.Error" id="hdLoginError" />
    <script type="text/javascript" src="@Url.Content("~/js/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/js/login/sweetalert.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/app/views/account/login.js")" asp-append-version="true"></script>


</body>

</html>
